<h2 class="page-header">Register</h2>
{{#if errors}}
    {{#each errors}}
        <div class="alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}
<form method="post" action="/users/register">
    <div class="form-group">
        <label for="">Name</label>
        <input type="text" class="form-control" name="name" type="text" placeholder="Name">
    </div>
    <div class="form-group">
        <label for="">Username</label>
        <input type="text" type="text" name="username" class="form-control" placeholder="Username">
    </div>
   <div class="form-group">
        <label for="">Email</label>
        <input type="text" class="form-control" name="email" type="email" placeholder="Email">
    </div>
     <div class="form-group">
        <label for="">Password</label>
        <input type="text" class="form-control" type="password" name="password" placeholder="Password">
    </div>
     <div class="form-group">
        <label for="">Password</label>
        <input type="text" class="form-control" type="password" name="password2" placeholder="Password">
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
</form>